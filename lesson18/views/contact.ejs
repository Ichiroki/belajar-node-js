<div class="row">
  <div class="col-md-6">
    <h4 class="mt-4">Contact List</h4>
  </div>
  <div class="col-md-6 d-flex justify-content-end align-items-center">
    <a href="/contact/add" class="btn btn-success mt-4">+ Add Contact</a>
  </div>
</div>
<% if(msg.length !== 0) { %>
<div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
  <div class="row">
     <div class="col-md-2 text-center">
        <i class="bi bi-exclamation-octagon" style="font-size: 2rem;"></i>
     </div>
     <div class="col-md-10 d-flex align-items-center">
      <p><%= msg %></p>
     </div>
  </div>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<% if (!contacts.length == 0) { %>
  <table class="table table-striped table-bordered border-secondary table-info mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">Umur</th>
        <th scope="col">Nomor Telepon</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% contacts.forEach((c, i) => { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= c.nama %></td>
          <td><%= c.umur %></td>
          <td><%= c.nomor %></td>
          <td>
            <div class="flex">
              <a href="/contact/<%= c.nama %>" class="badge btn btn-info text-bg-info rounded-pill">
                <i class="bi bi-eye-fill"></i>
              </a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <div class="alert alert-danger mt-4" role="alert">
    <div class="row">
       <div class="col-md-2 text-center">
          <i class="bi bi-exclamation-octagon" style="font-size: 2rem;"></i>
       </div>
       <div class="col-md-10 d-flex align-items-center">
          No contacts are found!<br> 
       </div>
    </div>
 </div>
<% } %>
 


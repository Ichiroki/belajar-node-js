<div class="container mt-3">
   <div class="row">
      <div class="col">
         <h4 class="mt-4">Detail Kontak</h4>
         <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
               <div class="row">
                  <div class="col-md-2 text-center">
                     <i class="bi bi-exclamation-octagon" style="font-size: 2rem;"></i>
                  </div>
                  <div class="col-md-10 d-flex align-items-center">
                     This contact does not exist <br>
                     <a href="/contact" class="alert-link">Back to contact</a>
                  </div>
               </div>
            </div>
         <% } else { %>
            <div class="card"> 
               <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.umur %></h6>
                  <p class="card-text"><%= contact.nomor %></p>

                  <a href="/contact" class="card-link">&laquo; Back to contact</a>
               </div>
            </div>
         <% } %>
      </div>
   </div>
</div>
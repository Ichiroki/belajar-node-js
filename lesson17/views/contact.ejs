<h4 class="mt-4">Daftar Kontak</h4>
<% if (!contacts.length == 0) { %>
  <table class="table table-striped table-bordered border-secondary table-info">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">Umur</th>
        <th scope="col">Nomor Telepon</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% contacts.forEach((c, i) => { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= c.nama %></td>
          <td><%= c.umur %></td>
          <td><%= c.nomor %></td>
          <td>
            <div class="flex">
              <a href="/contact/<%= c.nama %>" class="badge btn btn-info text-bg-info rounded-pill">
                <i class="bi bi-eye-fill"></i>
              </a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <div class="alert alert-danger" role="alert">
    <div class="row">
       <div class="col-md-2 text-center">
          <i class="bi bi-exclamation-octagon" style="font-size: 2rem;"></i>
       </div>
       <div class="col-md-10 d-flex align-items-center">
          No contacts are found!<br> 
       </div>
    </div>
 </div>
<% } %>
 

